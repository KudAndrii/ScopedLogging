<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackageId>AndrewK.Logger.ScopedLogging</PackageId>
        <Version>1.0.0</Version>
        <Authors>Andrew Kud</Authors>
        <Product>ScopedLogging</Product>
        <Title>AndrewK.Logger.ScopedLogging</Title>
        <Description>Makes it possible to easily write scoped parameters to all log messages in the scope area</Description>
        <PackageDescription>Makes it possible to easily write scoped parameters to all log messages in the scope area</PackageDescription>
        <PackageTags>Logger</PackageTags>
        <AssemblyVersion>1.0.0</AssemblyVersion>
        <FileVersion>1.0.0</FileVersion>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <RepositoryUrl>https://github.com/KudAndrii/ScopedLogging</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageIcon>Icon.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageRepositoryUrl>https://github.com/KudAndrii/ScopedLogging</PackageRepositoryUrl>
        <PackageRepositoryType>git</PackageRepositoryType>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.2" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="Icon.png">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </Content>
        <Content Include="README.md">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </Content>
        <Content Include="LICENSE">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </Content>
    </ItemGroup>

</Project>
