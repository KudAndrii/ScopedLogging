<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackageId>AndrewK.Logger.ScopedLogging</PackageId>
        <Version>0.9.0</Version>
        <Authors>Andrew Kud</Authors>
        <Product>ScopedLogging</Product>
        <Title>AndrewK.Logger.ScopedLogging</Title>
        <Description>Makes it possible to easily write scoped parameters to all log messages in the scope area</Description>
        <PackageDescription>Makes it possible to easily write scoped parameters to all log messages in the scope area</PackageDescription>
        <PackageTags>Logger</PackageTags>
        <AssemblyVersion>0.9.0</AssemblyVersion>
        <FileVersion>0.9.0</FileVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.2" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    </ItemGroup>

</Project>
